@using EntityLayer.Concrate
@model List<Blog>
@{
    ViewData["Title"] = "GetBlogByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>Blog id</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate</td>
            <td>@item.Category.CategoryName</td>
            <td>@if (item.BlogStatus)
            {
                <span class="badge badge-success">Aktif</span>
            }
            else { 
            <span class="badge badge-secondary">Pasif</span>
            }</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogId" onclick="return confirm('Silme istediğine emin misin');" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>


        </tr>
    }

</table>

<a href="/Blog/AddBlog/" class="btn btn-primary"> Yeni Blog Oluştur</a>